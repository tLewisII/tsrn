{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "command": "yarn",
            "args": [
                "build"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "taskName": "build",
            "problemMatcher": "$tsc"
        },
        {
            "command": "yarn",
            "args": [
                "debugPreBuild"
            ],
            "isShellCommand": true,
            "isBackground": true,
            "taskName": "prebuild",
            "problemMatcher": "$tsc-watch"
        }
    ]
}