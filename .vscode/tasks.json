{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "args": [
        "run"
    ],
    "tasks": [
        {
            "isBuildCommand": true,
            "taskName": "build",
            "problemMatcher": "$tsc"
        },
        {
            "isBackground": true,
            "taskName": "watch",
            "problemMatcher": "$tsc-watch"
        }
    ],
    "showOutput": "silent",
    "problemMatcher": "$tsc"
}